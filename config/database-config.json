{
  "connection": {
    "host": "prod-db.example.com",
    "port": 5432,
    "database": "devops_production",
    "username": "prod_admin",
    "ssl_mode": "require",
    "pool_size": 20,
    "timeout": 30,

    "_development_overrides": {
      "host": "localhost",
      "database": "devops_development",
      "username": "dev_user",
      "password": "dev_password",
      "ssl_mode": "disable",
      "pool_size": 5,
      "timeout": 10
    },

    "_experimental": {
      "enabled": false,
      "type": "distributed",
      "hosts": ["node1.example.com", "node2.example.com", "node3.example.com"],
      "database": "devops_experimental",
      "username": "experimental_admin",
      "ssl_mode": "verify-full",
      "pool_size": 50,
      "timeout": 60,
      "connection_pooling": "pgbouncer",
      "read_replicas": 5,
      "note": "Experimental distributed mode — not production ready"
    }
  },

  "backup": {
    "enabled": true,
    "schedule": "0 2 * * *",
    "retention_days": 30,
    "location": "/backups/database",

    "_development_overrides": {
      "enabled": false,
      "schedule": "manual",
      "retention_days": 7,
      "location": "/tmp/backups"
    },

    "_experimental": {
      "enabled": false,
      "strategy": "continuous",
      "schedule": "*/15 * * * *",
      "retention_days": 90,
      "location": "s3://backups/experimental",
      "encryption": true,
      "geo_redundancy": true,
      "note": "Experimental S3 backup system — enable only in testing"
    }
  },

  "replication": {
    "enabled": true,
    "replicas": 2,
    "sync_mode": "synchronous",

    "_development_overrides": {
      "enabled": false,
      "replicas": 0,
      "sync_mode": "asynchronous"
    },

    "_experimental": {
      "enabled": false,
      "replicas": 5,
      "sync_mode": "semi-synchronous",
      "multi_region": true,
      "regions": ["us-east", "eu-west", "ap-south"],
      "note": "Experimental multi-region replication — may affect latency"
    }
  },

  "ai_optimization": {
    "enabled": false,
    "query_optimization": true,
    "index_suggestions": true,
    "auto_vacuum_ml": true,
    "note": "AI-based query optimization features are experimental only"
  },

  "monitoring": {
    "enabled": true,
    "slow_query_threshold": 100,
    "alert_on_anomaly": false,
    "metrics_export": "prometheus",

    "_experimental": {
      "alert_on_anomaly": true,
      "note": "Anomaly alerting uses ML models — not production validated"
    }
  },

  "development": {
    "enabled": false,
    "seed_data": true,
    "reset_on_restart": true,
    "debug_queries": true
  }
}